page,.main{
    height: 100%;
}
.categroy-left{
    float: left;
    width: 150rpx;
    height: 100%;
    border-right: 1px solid #ddd;
    box-sizing: border-box;
}
.categroy-left .cate-list{
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    /* border-left : 2px solid #fff; */
    font-size: 30rpx;
}
.categroy-left .cate-list.on{
    color: #AB956D;
    /* border-color: #AB956D; */
}
.categroy-right{
    float: right;
    width: 600rpx;
    height: 90%;
    overflow: hidden;
    
}
.cate-box{
    
    padding:40rpx;
    box-sizing: border-box;
    overflow:scroll;
}
.cate-box .cate-banner image{
    display: block;
    width: 100%;
    height: 250rpx;
}
.cate-title{
    position: relative;
    height: 30rpx;
    line-height: 30rpx;
    padding:30rpx 0 55rpx;
    text-align: center;
    color: #AB956D;
    font-size: 35rpx;
}
.cate-title::before{
    position: absolute;
    left: 130rpx;
    top: 43rpx;
    content: '';
    width: 60rpx;
    height: 4rpx;
    background: #AB956D;
}
.cate-title::after{
    position: absolute;
    right: 130rpx;
    top: 43rpx;
    content: '';
    width: 60rpx;
    height: 4rpx;
    background: #AB956D;
}

.product-list{
    display: inline-block;
    width: 500rpx;
    height: 180rpx;
    margin:auto;
    }
.product-list image{
    width: 150rpx;
    height: 150rpx;
}
