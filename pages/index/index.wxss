.product-list-detail {
    display: inline-block;
    width: 200rpx;
    height: 50rpx;
    
}
.product-list-text {
    display: inline-block;
    width: 200rpx;
    height: 100rpx;
    line-height: 40rpx;     
    font-size:35rpx;
    font-style:normal;
    margin:auto 10px;
    
}
.product-list-addminus {
  display: inline;
    bottom: 20rpx;
    width: 250rpx;
    height: 80rpx; 
}
.product-list-addminus text{
    display: inline-block;
    line-height: 80rpx;
    text-align: center;
    margin:auto;
}
.product-list-addminus image{
  width:50rpx;
  height: 50rpx; 
}
.count-add, .count-down{
    font-size: 44rpx;
    width: 50rpx;
    height: 100%;
}
.price{
    display: inline-block;
    width: 300rpx;
    height: 105rpx;
    line-height: 50rpx;
    font-size:40rpx;
    font-style:normal;
    margin: auto 10px;
}
